// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider will be auto-synced by scripts/sync-prisma-provider.js based on DATABASE_URL
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Card {
  id          String   @id @default(cuid())
  name        String
  email       String?
  image       String?
  attributes  String   // JSON string for attributes
  tier        String
  description String
  birthYear   Int?
  deathYear   Int?
  status      String   @default("approved")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("cards")
}

model Proposal {
  id          String   @id @default(cuid())
  name        String
  email       String?
  proposerName String?
  proposerInstagram String?
  image       String?
  attributes  String   // JSON string for attributes
  tier        String
  description String
  birthYear   Int?
  deathYear   Int?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("proposals")
}

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  instagramUrl String?
  twitterUrl   String?
  facebookUrl  String?
  linkedinUrl  String?
  youtubeUrl   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("admins")
}
