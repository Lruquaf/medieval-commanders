// This is your Prisma schema file for development,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id          String   @id @default(cuid())
  name        String
  email       String?
  image       String?
  attributes  String   // JSON string for attributes
  tier        String
  description String
  birthYear   Int?
  deathYear   Int?
  status      String   @default("approved")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("cards")
}

model Proposal {
  id          String   @id @default(cuid())
  name        String
  email       String
  image       String?
  attributes  String   // JSON string for attributes
  tier        String
  description String
  birthYear   Int?
  deathYear   Int?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("proposals")
}
