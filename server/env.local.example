# Local Development Environment Variables
# Copy this file to .env for local development

# Database - Use a local Postgres or development Postgres URL
# Example: postgresql://user:pass@localhost:5432/medcom_dev?schema=public
DATABASE_URL="postgresql://user:pass@localhost:5432/medcom_dev?schema=public"

# Server Configuration
PORT=5001
NODE_ENV=development

# Admin Configuration
ADMIN_EMAIL=admin@medievalcommanders.com

# File Upload Configuration (Optional for local)
# Set these to use Cloudinary in development; otherwise uploads fall back to base64
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Optional for local development)
# You can use a test email service or disable email features
# RESEND_API_KEY=your_resend_api_key_here
# GMAIL_CLIENT_ID=your_gmail_client_id_here
# GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# CORS Configuration
# Use CORS_ORIGINS for multiple origins; falls back to FRONTEND_URL
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# FRONTEND_URL=http://localhost:5173
